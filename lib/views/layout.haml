%html
  %head
    %title Goldberg
    %script{:type => "text/javascript", :src  => "/js/jquery-1.5.min.js"}
    %link{:rel => 'stylesheet', :href => '/stylesheets/blueprint/screen.css', :type => 'text/css'}
    - if defined?(keep_refreshing) && keep_refreshing
      :javascript
        $(document).ready(function(){
          setTimeout(function(){ window.location.reload(); }, 15 * 1000)
        });
      %noscript
        %meta{:'http-equiv' => "refresh", :content => "15"}
    <!--[if lt IE 8]> %link{:rel => 'stylesheet', :href => '/stylesheets/ie.css', :type => 'text/css'} <![endif]-->
    = yield_content :head
  %body
    .container
      %h1
        %a{:href => '/'} Goldberg
      %hr

      = yield
